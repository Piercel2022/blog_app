
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
<div class="container-fluid mb-3 w-80 bg-zinc-700">
  <div class="container-fluid d-flex justify-content-center m-3 w-75 p-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="container-fluid d-flex justify-content-center m-3 w-75 p-3">
    <%= f.password_field :password, autocomplete: "new-password" , placeholder: "Password" %>
  </div>

  <div class="container-fluid d-flex justify-content-center m-3 w-75 p-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password" %>
  </div>

  <div class="container d-flex justify-content-center w-80 h-6 border-solid border-3 bg-blue-500 text-white shadow-indigo-500/50">
    <%= f.submit "Sign up" %>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
