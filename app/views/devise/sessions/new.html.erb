
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="mb-3 container-fluid w-80 bg-zinc-700">
  <div class="p-3 m-4 container-fluid d-flex justify-content-center w-75">
    <%= f.email_field :email, autofocus: true, autocomplete: "username", placeholder: "Username", class: 'p-2' %>
  </div>

  <div class="p-3 m-4 container-fluid d-flex justify-content-center w-75">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", class: 'p-2'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="my-0 text-white container-fluid d-flex justify-content-center">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
</div>
<% end %>

  <div class="container font-bold text-white bg-blue-500 border-solid h-9 d-flex justify-content-center w-80 shadow-indigo-500/50">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
