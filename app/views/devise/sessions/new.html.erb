
<div class="justify-center mb-3 border d-flex">

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="justify-center mb-3 ml-3 container-fluid w-80 bg-zinc-700">
  <div class="justify-center p-3 m-4 container-fluid d-flex w-75">
    <%= f.email_field :email, autofocus: true, autocomplete: "username", placeholder: "Username", class: 'p-2' %>
  </div>

  <div class="justify-center p-3 m-4 container-fluid d-flex w-75">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", class: 'p-2'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="justify-center my-0 text-white container-fluid d-flex">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
</div>
<% end %>

    <%= f.submit "Log in" , class: "bg-blue-600  d-flex justify-center text-white ml-3 p-3 border-solid w-80 font-bold" %>
  
<% end %>

<%= render "devise/shared/links" %>
</div>