
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
<div class="form-floating mb-3 w-100">
  <div class="container-fluid d-flex justify-content-center my-3 w-75 p-3">
    <%= f.email_field :email, autofocus: true, autocomplete: "username", placeholder: "Username", class: 'inp' %>
  </div>

  <div class="container-fluid d-flex justify-content-center mt-4">
    <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", class: 'inp'  %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="container-fluid d-flex justify-content-center my-0">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
</div>
<% end %>

  <div class="container d-flex justify-content-center border-solid border-3 bg-blue-500 text-white shadow-indigo-500/50">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
